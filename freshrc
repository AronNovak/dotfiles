## !!!!!!!!!!!!!!!!!!!!!!
## ATTENTION
## !!!!!!!!!!!!!!!!!!!!!!
## :prezto submodules update only after "fresh" not after fresh install or update

fresh_after_build() {
## :make some things executable
chmod +x $HOME/.fresh/build/src/PHP_CodeSniffer/scripts/phpcs
chmod +x $HOME/.fresh/build/src/PHP_CodeSniffer/scripts/phpcbf
chmod +x $HOME/.fresh/build/zprezto/modules/alias-tips/external/alias-tips

phpcs --config-set installed_paths ~/.fresh/build/src/PHP_CodeSniffer/CodeSniffer/Standards

  if [ -z "${updated_submodules+1}" ]; then
    cd ~/.fresh/source/rosenstrauch/prezto/ && git checkout production && git pull && git submodule update --init --recursive
    export updated_submodules=0
  fi
  if [ "$updated_submodules" -eq 0 ]; then
    export updated_submodules=$[updated_submodules+1]
    ~/bin/fresh
  fi
  unset updated_submodules
}


